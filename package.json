{
  "name": "auto-updater",
  "version": "1.0.2",
  "description": "Electron app auto updater",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder build"
  },
  "build": {
    "appId": "com.electron.autoupdater",
    "productName": "AutoUpdater",
    "mac": {
      "category": "public.app-category.developer-tools",
      "type": "distribution"
    },
    "publish": {
      "provider": "github",
      "token": "ee0d91a49a0e6a07429a408afd06629330872ab4",
      "owner": "brunnogrillo",
      "repo": "autoUpdater"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brunnogrillo/autoUpdater.git"
  },
  "author": "Brunno Grillo",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "electron-updater": "^4.3.1"
  },
  "license": "ISC"
}
